
public class BestWord implements Candidate{

	private String word;
	private int confidence;
	
	public BestWord(String word, int confidence) {
		this.word = word;
		this.confidence = confidence;
	}
	
	public String getWord() {
		return word;
	}
	public Integer getConfidence() {
		return new Integer(confidence);
	}
	
	public void isThisWord(String word){
		if(this.word.equals(word)) {
			confidence++;
		}
	}
}
