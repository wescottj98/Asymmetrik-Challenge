
public class WordCandidate implements Candidate, Comparable{

	private String word;
	private int confidence;
	
	public WordCandidate(String word, int confidence) {
		this.word = word;
		this.confidence = confidence;
	}

	public String getWord() {
		return word;
	}
	public Integer getConfidence() {
		return new Integer(confidence);
	}
	
	public void addConfidence(){
		confidence++;
	}
	
	public boolean equals(Object obj) {
		if(this.compareTo(obj)==0) {
			return true;
		}
		return false;
		/*if(this == obj) {
			return true;
		}
		if(!(obj instanceof WordCandidate)) {
			return false;
		}
		WordCandidate toEquate = (WordCandidate)obj;
		if((this.getWord().equals(toEquate.getWord()) && confidence == toEquate.getConfidence().intValue())) {
			return true;
		}
		return false;*/
	}
	
	public boolean sameString(WordCandidate word) {
		return this.word.equals(word.getWord());
	}
	
	public int compareTo(Object obj) {
		if(this == obj) {
			return 0;
		}
		if(!(obj instanceof WordCandidate)) {
			return -1;
		}
		WordCandidate toEquate = (WordCandidate)obj;
		int result = toEquate.getConfidence().intValue() - this.confidence;
		if(result == 0) {
			result = this.word.compareTo(toEquate.getWord());
		}
		return result;
	}
}
